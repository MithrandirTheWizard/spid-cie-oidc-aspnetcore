@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div>
    <div class="container pt-2 p-3">
        <div class="row d-lg-flex">
            <div class="col-12">
                <div class="card-wrapper card-space">
                    <div class="card card-bg no-after">
                        <div class="card-body">
                            <div class="row h-100">

                                <div class="col-12 p-4">
                                    <h4 class="text-left">
                                        Error
                                    </h4>

                                    <p>
                                        <code>@Model.Message</code>
                                    </p>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>