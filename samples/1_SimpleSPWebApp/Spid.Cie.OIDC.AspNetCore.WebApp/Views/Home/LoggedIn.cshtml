@using Spid.Cie.OIDC.AspNetCore.Models
@{
    ViewData["Title"] = "Logged in";
}
<h1>@ViewData["Title"]</h1>

<div>
    <div class="container pt-2 p-3">
        <div class="row d-lg-flex">
            <div class="col-12">
                <div class="card-wrapper card-space">
                    <div class="card card-bg no-after">
                        <div class="card-body">
                            <div class="row h-100">

                                <div class="col-12 p-4">
                                    <h4 class="text-left">
                                        User attributes
                                    </h4>

                                    <dl class="mt-4 mb-4">
                                        @foreach (var claim in User.Claims.Where(c => c.Type.StartsWith("https://attributes.spid.gov.it/")
                                            || c.Type.StartsWith("https://idserver.servizicie.interno.gov.it/")))
                                        {
                                            <dt>@claim.Type:</dt>
                                            <dd>@claim.Value</dd>
                                        }

                                    </dl>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>